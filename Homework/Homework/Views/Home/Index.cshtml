@using Arch.EntityFrameworkCore.UnitOfWork.Collections

@addTagHelper *, Homework
@model IPagedList<Homework.Data.Models.Articles>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="my-4">
    SkillTree Blog
    <small>文章列表</small>
</h1>
<!-- Blog Post -->
@foreach (var item in Model.Items)
{
    <vc:summary guid="@item.Id"></vc:summary>
}

<!-- Pagination -->
<nav class="pagination justify-content-center">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "":"disabled")"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@Model.PageIndex-1">Previous</a></li>
        @for (var i = 0; i < Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == @i ? "active":"")"><a class="page-link " asp-controller="Home" asp-action="Index" asp-route-page="@i">@(i+1)</a></li>
        }
        <li class="page-item @(Model.HasNextPage ? "":"disabled")"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@Model.PageIndex+1">Next</a></li>
    </ul>
</nav>